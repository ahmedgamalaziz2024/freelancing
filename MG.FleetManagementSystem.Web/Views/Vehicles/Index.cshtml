@model IEnumerable<MG.FleetManagementSystem.Web.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicles";
}

<div class="container mt-4">
    <h1 class="mb-4">Vehicles</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New</a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Type)</th>
                    <th>@Html.DisplayNameFor(model => model.LicensePlate)</th>
                    <th>@Html.DisplayNameFor(model => model.OdometerReading)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                        <td>@Html.DisplayFor(modelItem => item.LicensePlate)</td>
                        <td>@Html.DisplayFor(modelItem => item.OdometerReading)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i> Edit</a>
                            <button class="btn btn-sm btn-info details-btn" data-id="@item.Id"><i class="bi bi-info-circle"></i> Details</button>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal for Details -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Vehicle Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="detailsModalBody">
                <p>Loading...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.details-btn').on('click', function () {
                var id = $(this).data('id');
                $('#detailsModalBody').html('<p>Loading...</p>');
                var myModal = new bootstrap.Modal(document.getElementById('detailsModal'));
                myModal.show();

                $.ajax({
                    url: '@Url.Action("Details", "Vehicles")/' + id,
                    type: 'GET',
                    success: function (result) {
                        $('#detailsModalBody').html(result);
                    },
                    error: function (xhr, status, error) {
                        $('#detailsModalBody').html('<p>Error loading details. Status: ' + status + ', Error: ' + error + '</p>');
                        console.log('Error:', xhr.responseText);
                    }
                });
            });
        });
    </script>
}