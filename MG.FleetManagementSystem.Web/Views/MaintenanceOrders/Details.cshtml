@model MG.FleetManagementSystem.Web.Models.MaintenanceOrder

@{
    ViewData["Title"] = "Maintenance Order Details";
}

<h2>Maintenance Order Details</h2>

<dl class="row">
    <dt class="col-sm-3">Vehicle</dt>
    <dd class="col-sm-9">@Model.VehicleId</dd>

    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@Model.Type</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.Description</dd>

    <dt class="col-sm-3">Start Date</dt>
    <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Estimated Completion Date</dt>
    <dd class="col-sm-9">@Model.EstimatedCompletionDate.ToShortDateString()</dd>

    @if (Model.CompletionDate.HasValue)
    {
        <dt class="col-sm-3">Completion Date</dt>
        <dd class="col-sm-9">@Model.CompletionDate.Value.ToShortDateString()</dd>
    }

    @if (!string.IsNullOrEmpty(Model.CompletionNotes))
    {
        <dt class="col-sm-3">Completion Notes</dt>
        <dd class="col-sm-9">@Model.CompletionNotes</dd>
    }
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>