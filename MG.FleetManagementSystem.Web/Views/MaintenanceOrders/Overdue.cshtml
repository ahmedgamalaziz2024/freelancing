@model IEnumerable<MG.FleetManagementSystem.Web.Models.MaintenanceOrder>

@{
    ViewData["Title"] = "Overdue Maintenance Orders";
}

<h2>Overdue Maintenance Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Vehicle</th>
            <th>Type</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>Estimated Completion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.VehicleId</td>
                <td>@order.Type</td>
                <td>@order.Description</td>
                <td>@order.StartDate.ToShortDateString()</td>
                <td>@order.EstimatedCompletionDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Complete" asp-route-id="@order.Id" class="btn btn-success btn-sm">Complete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to All Orders</a>
</div>