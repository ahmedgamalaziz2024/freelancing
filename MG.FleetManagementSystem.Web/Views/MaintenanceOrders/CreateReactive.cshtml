@model MG.FleetManagementSystem.Web.Models.MaintenanceOrder

@{
    ViewData["Title"] = "Create Reactive Maintenance Order";
}

<h2>Create Reactive Maintenance Order</h2>

<form asp-action="CreateReactive" method="post">
    <div class="form-group">
        <label asp-for="VehicleId" class="control-label"></label>
        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.Vehicles"></select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>